@{
    ViewData["Title"] = "News";
}

<div>
    <h1 class="display-4">News</h1>

    <a href="/admin/news/createNews" role="button" class="btn btn-primary">Create news</a>

    <br />
    <hr />
    <br />

    <table cellpadding="10">
        <tr>
            <th>Title</th>
            <th>Text</th>
            <th>Publication Date</th>
            <th>Is Active?</th>
            <th>Author ID</th>
            <th>Created Date</th>
            <th></th>
            <th></th>
        </tr>
    @foreach(var item in Model)
    {
        <tr>
                <td>@item.Title</td>
                <td>@item.Text</td>
                <td>@item.Date.ToString("yyyy.MM.dd HH:mm")</td>
                <td>@item.IsActive</td>
                <td>@item.AuthorId</td>
                <td>@item.CreateDate.ToString("yyyy.MM.dd HH:mm")</td>
                <td><a href="">Edit</a></td>
                <td><a href="">Delete</a></td>
        </tr>   
    }
    </table>

</div>
